<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#208de8" android:startColor="#6ba8ea" />

            <stroke android:width="1dip" android:color="#33669d" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="90" android:endColor="#208de8" android:startColor="#4097dc" />

            <stroke android:width="2dip" android:color="#33669d" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#6ba8ea" android:startColor="#208de8" />

            <stroke android:width="1dip" android:color="#33669d" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>